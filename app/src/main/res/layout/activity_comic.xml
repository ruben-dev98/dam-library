<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/textView_Comic_Editorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_Comic_Coleccion"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Precio"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_Comic_Coleccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/textView_Comic_Editorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Estado"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_Comic_Titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/textView_Comic_Portada"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Titulo" />

        <TextView
            android:id="@+id/textView_Comic_Sinopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Coleccion"
            android:gravity="start" />

        <TextView
            android:id="@+id/textView_Comic_Estado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView_Comic_Coleccion"
            app:layout_constraintEnd_toStartOf="@+id/textView_Comic_Precio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Portada"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_Comic_Precio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView_Comic_Editorial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_Comic_Estado"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Portada"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_Comic_NumDisponibles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_Comic_NumDisponibles_Etiqueta"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Sinopsis"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_Comic_NumDisponibles_Etiqueta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/NumDisponibles"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/textView_Comic_NumDisponibles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Comic_Sinopsis"
            android:gravity="center_horizontal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
